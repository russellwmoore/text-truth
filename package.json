    "ibm-watson": "^5.6.2",
    "morgan": "^1.10.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^4.3.1",
    "twitter": "^1.7.1",
    "watson-developer-cloud": "^3.18.4"
  },
  "devDependencies": {
